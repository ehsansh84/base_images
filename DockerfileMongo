RUN apt update

RUN apt install -y wget
RUN wget https://curl.se/download/curl-7.85.0.tar.gz
RUN tar xvfz curl-7.85.0.tar.gz
RUN cd curl-7.85.0
RUN mkdir /home/curl
RUN apt install -y binutils
RUN apt-get install -y build-essential
RUN ./configure --prefix=$HOME/curl --without-ssl
RUN make
RUN make install

